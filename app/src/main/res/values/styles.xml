<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--WGU Application-->
    <color name="form_icon_color">#8a000000</color>

    <style name="FormIconStyle">
        <item name="android:layout_width">@dimen/form_image_width_height</item>
        <item name="android:layout_height">@dimen/form_image_width_height</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:tint">@color/form_icon_color</item>
    </style>

    <style name="CheckBoxStyle">

    </style>

    <style name="blockGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#efefef</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <style name="wguFormLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="wguFormMessage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/errorMessage</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">13dp</item>
        <item name="android:height">14dp</item>
    </style>

</resources>
